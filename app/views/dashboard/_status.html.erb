<script type="text/javascript">
    $(document).ready(function () {
        <% if params['status'].present? %>
            $('#select-status').val(<%= params['status'] %>)
        <% elsif @online_application_form.present? %>
            $('#select-status').val(<%= @online_application_form.status.present? ? @online_application_form.status : '0' %>)
        <% end %>
    })
</script>
<div class="row no-print">
  <div class="span4">
    <b>Applicant Status</b>
  </div>
  <div class="span4">
    <select name="status" id="select-status">
      <option value="0">All</option>
      <option value="10">Prospect</option>
      <option value="20">Applicant</option>
      <option value="30">Candidate</option>
      <option value="40">Accepted</option>
      <option value="50">Confirmed</option>
      <option value="60">Enrolled</option>
      <option value="90">Deleted</option>
    </select>
  </div>
  <div class="span2">
    <input class="btn btn-info" type="submit"/>
  </div>
</div>